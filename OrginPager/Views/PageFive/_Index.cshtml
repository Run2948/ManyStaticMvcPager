@using Webdiyer.WebControls.Mvc
@model PagedList<OrginPager.Models.Person>
@{
    ViewBag.Title = "Index";
}

<table id="Result" cellspacing="0" cellpadding="0">
    <thead>
        <tr>
            <th>
                编号
            </th>
            <th>
                姓名
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
<div style="float: left; width: 50%">共 @Model.TotalPageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.CurrentPageIndex 页</div>
<div>
    @Ajax.Pager(Model, new PagerOptions
{
    FirstPageText = "首页",
    PrevPageText = "上一页",
    NextPageText = "下一页",
    LastPageText = "尾页",
    ShowPrevNext = false,
    PageIndexParameterName = "page",
    ContainerTagName = "div",
    CssClass = "pagination",
    CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>",
    DisabledPagerItemTemplate = "<span class=\"stop\">{0}</span>",
    Id = "idiidid"
},new MvcAjaxOptions()
{
    UpdateTargetId= "MVCpager",
    DataFormId = "searchForm",
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    Url ="Index"
})
</div>
